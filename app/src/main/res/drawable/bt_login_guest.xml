<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:padding="15dp" android:shape="rectangle">
            <solid android:color="#1affffff" />
            <corners android:radius="@dimen/_20sdp" />
            <stroke android:width="1dip" android:color="@color/app_blue" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:padding="15dp" android:shape="rectangle">
            <solid android:color="@color/grey_color" />
            <corners android:radius="@dimen/_20sdp" />
            <stroke android:width="1dip" android:color="@color/grey_color_menu" />
        </shape>
    </item>

</selector>