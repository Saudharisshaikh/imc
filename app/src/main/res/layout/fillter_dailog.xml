<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_shap"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Your Appointment by Date"
            android:gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>


        <LinearLayout
            android:id="@+id/from_date_lay"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_corners_date_dailog"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="*From Date"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawableTint="@color/colorPrimary"
                android:text="2020-23-23"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/to_date_lay"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_corners_date_dailog"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="*To Date"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawableTint="@color/colorPrimary"
                android:text="2020-23-23"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/button_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Apply"
            android:background="@drawable/rounded_corners_date_dailog"
            android:layout_marginBottom="15dp"
            android:textSize="20dp"
            android:padding="10dp"
            android:backgroundTint="@color/colorPrimary"

            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>