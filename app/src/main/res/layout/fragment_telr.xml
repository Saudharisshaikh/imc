<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_bg_color"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/ic_blue_style_bg_v_calen" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:id="@+id/steps"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_below="@+id/main_toolbar"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/appointment_background">


            <ProgressBar
                android:id="@+id/progressBarOneStar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_weight="1"
                android:indeterminate="false"
                android:layout_marginTop="@dimen/_15sdp"
                android:max="100"
                android:progress="50"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:progressTint="@color/app_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <com.rey.material.widget.ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/tick"
                android:src="@drawable/tick_image"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user"
                app:layout_constraintStart_toStartOf="@+id/tick"
                app:layout_constraintEnd_toEndOf="@+id/tick"
                app:layout_constraintTop_toBottomOf="@+id/progressBarOneStar"
                android:text="@string/appointment"
                android:textColor="@color/app_green"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="13sp"
                />

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/user"
                app:layout_constraintEnd_toEndOf="@+id/user"
                app:layout_constraintTop_toBottomOf="@+id/user"
                android:text="@string/string_information"
                android:textColor="@color/app_green"
                android:textSize="13sp"
                />

            <com.rey.material.widget.ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/tickGrey"
                android:src="@drawable/gery_pic"
                android:layout_marginEnd="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Payment"
                app:layout_constraintStart_toStartOf="@+id/tickGrey"
                app:layout_constraintEnd_toEndOf="@+id/tickGrey"
                app:layout_constraintTop_toBottomOf="@+id/progressBarOneStar"
                android:text="@string/string_user_amp_payment"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="13sp"
                />

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/Payment"
                app:layout_constraintEnd_toEndOf="@+id/Payment"
                app:layout_constraintTop_toBottomOf="@+id/Payment"
                android:text="@string/string_information"
                android:textSize="13sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_360sdp"
            android:layout_below="@+id/steps"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/appointment_background">

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/appointmentInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/string_appointment_information"
                        android:textColor="@color/app_green"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewPoint"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/greyView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/appointmentInformation" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/main_lay_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewPoint">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".80"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/clinic_"
                                android:textColor="@color/nav_title_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_clinic_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.20"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/grey_dark_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".80"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/phyisician_"
                                android:textColor="@color/nav_title_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_physician_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.20"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/grey_dark_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".80"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/speciality"
                                android:textColor="@color/nav_title_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_physician_speciality"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.20"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/grey_dark_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".80"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/appointment_date"
                                android:textColor="@color/nav_title_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.20">

                                <TextView
                                    android:id="@+id/tv_appointment_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/grey_dark_color"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".80"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/appointment_time"
                                android:textColor="@color/nav_title_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.20">

                                <TextView
                                    android:id="@+id/tv_appointment_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/grey_dark_color"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".80"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/appointment_type"
                                android:textColor="@color/nav_title_color"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.20">

                                <TextView
                                    android:id="@+id/tv_appointment_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/grey_dark_color"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".80"
                                    android:padding="@dimen/_3sdp"
                                    android:text="@string/patient_pay"
                                    android:textColor="@color/nav_title_color"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.20">

                                    <TextView
                                        android:id="@+id/tv_patient_pay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_3sdp"
                                        android:textColor="@color/grey_dark_color"
                                        android:textSize="@dimen/text_size_normal"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".80"
                                    android:padding="@dimen/_3sdp"
                                    android:text="@string/patient_discount"
                                    android:textColor="@color/nav_title_color"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.20">

                                    <TextView
                                        android:id="@+id/tv_patient_discount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_3sdp"
                                        android:textColor="@color/grey_dark_color"
                                        android:textSize="@dimen/text_size_normal"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".80"
                                    android:padding="@dimen/_3sdp"
                                    android:text="@string/patient_vat"
                                    android:textColor="@color/nav_title_color"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.20">

                                    <TextView
                                        android:id="@+id/tv_patient_vat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_3sdp"
                                        android:textColor="@color/grey_dark_color"
                                        android:textSize="@dimen/text_size_normal"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".80"
                                    android:padding="@dimen/_3sdp"
                                    android:text="@string/appointment_price"
                                    android:textColor="@color/nav_title_color"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.20">

                                    <TextView
                                        android:id="@+id/tv_appointment_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_3sdp"
                                        android:textColor="@color/grey_dark_color"
                                        android:textSize="@dimen/text_size_normal"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/userInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="User Information"
                        android:textColor="@color/app_green"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_lay_out" />

                    <View
                        android:id="@+id/views"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/greyView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userInfo" />

                    <TextView
                        android:id="@+id/fullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Full name"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/views" />

                    <TextView
                        android:id="@+id/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="*"
                        android:visibility="gone"
                        android:textColor="@color/app_red"
                        app:layout_constraintStart_toEndOf="@+id/fullName"
                        app:layout_constraintTop_toBottomOf="@+id/views" />

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/greyView"
                        android:hint="Enter Full Name"
                        android:padding="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fullName" />

                    <TextView
                        android:id="@+id/address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Address line 1"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edt_name" />

                    <TextView
                        android:id="@+id/red1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="*"
                        android:visibility="gone"
                        android:textColor="@color/app_red"
                        app:layout_constraintStart_toEndOf="@+id/address1"
                        app:layout_constraintTop_toBottomOf="@+id/edt_name" />

                    <EditText
                        android:id="@+id/edt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/greyView"
                        android:visibility="gone"
                        android:hint="Address-1"
                        android:padding="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/address1" />

                    <TextView
                        android:id="@+id/address2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Address line 2"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edt1" />

                    <EditText
                        android:id="@+id/edt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/greyView"
                        android:hint="Address-2"
                        android:visibility="gone"
                        android:padding="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/address2" />

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="City"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edt2" />

                    <TextView
                        android:id="@+id/red3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="*"
                        android:visibility="gone"
                        android:textColor="@color/app_red"
                        app:layout_constraintStart_toEndOf="@+id/city"
                        app:layout_constraintTop_toBottomOf="@+id/edt2" />

                    <EditText
                        android:id="@+id/edt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/greyView"
                        android:hint="Jeddah"
                        android:visibility="gone"
                        android:padding="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/city" />

                    <TextView
                        android:id="@+id/region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Region/State"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edt3" />

                    <TextView
                        android:id="@+id/red4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="*"
                        android:visibility="gone"
                        android:textColor="@color/app_red"
                        app:layout_constraintStart_toEndOf="@+id/region"
                        app:layout_constraintTop_toBottomOf="@+id/edt3" />

                    <EditText
                        android:id="@+id/edt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/greyView"
                        android:hint="Jeddah"
                        android:visibility="gone"
                        android:padding="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/region" />

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Country"
                        android:visibility="gone"
