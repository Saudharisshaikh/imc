<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_bg_color"
    android:clickable="true"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:fitsSystemWindows="true"
        android:focusable="false"
        android:focusableInTouchMode="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadeScrollbars="true"
            android:fillViewport="true"
            android:paddingBottom="@dimen/_25sdp"
            android:scrollbarFadeDuration="5"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:focusable="false"
                android:focusableInTouchMode="true">

                <RelativeLayout
                    android:id="@+id/lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_bg_cal_small"
                    android:paddingBottom="@dimen/_50sdp">

                    <LinearLayout
                        android:id="@+id/lay_mrn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_back_" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/bmr_cal"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_big"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/weight_kg"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <EditText
                            android:id="@+id/ed_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:background="@color/color_ed_fill"
                            android:gravity="start"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:padding="@dimen/_8sdp"
                            android:textAlignment="viewStart"
                            android:textColor="#fff"
                            android:textDirection="locale"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/height_cm"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <EditText
                            android:id="@+id/ed_height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:background="@color/color_ed_fill"
                            android:gravity="start"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:padding="@dimen/_8sdp"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_size_normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/gender"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="@color/color_ed_fill"
                                android:drawableEnd="@drawable/ic_droparrow"
                                android:drawableRight="@drawable/ic_droparrow"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="start"
                                android:padding="@dimen/_8sdp"
                                android:text="@string/select"
                                android:textColor="#fff"
                                android:textSize="@dimen/text_size_normal"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/age"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <EditText
                            android:id="@+id/ed_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:background="@color/color_ed_fill"
                            android:gravity="start"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:padding="@dimen/_8sdp"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_size_normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/activity_level"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_activity_level"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="@color/color_ed_fill"
                                android:drawableEnd="@drawable/ic_droparrow"
                                android:drawableRight="@drawable/ic_droparrow"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="start"
                                android:padding="@dimen/_8sdp"
                                android:text="@string/select"
                                android:textColor="#fff"
                                android:textSize="@dimen/text_size_normal"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lay_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".80"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_result_bmr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_extra_big2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_bmr"
                            android:textColor="@color/text_blue_color"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.20"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_result_maint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_extra_big2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_calory_per_day"
                            android:textAlignment="center"
                            android:textColor="@color/text_blue_color"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_btn_calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_result"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_80sdp"
                    android:layout_marginBottom="@dimen/_30sdp"

                    android:background="@drawable/btn_sign_up"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_50sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_50sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calculate"
                        android:textColor="@color/button_click_text_white_blue"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>