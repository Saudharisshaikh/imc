<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_bg_color"
    android:clipToPadding="false"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:fitsSystemWindows="true"
        android:focusable="false"
        android:focusableInTouchMode="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:focusable="false"
                android:focusableInTouchMode="true">

                <RelativeLayout
                    android:id="@+id/lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_bg_login"
                    android:paddingBottom="@dimen/_50sdp">

                    <LinearLayout
                        android:id="@+id/lay_mrn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_8sdp">

                        <RelativeLayout
                            android:id="@+id/main_toolbar"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:theme="@style/AppTheme.AppBarOverlay">

                            <ImageView
                                android:id="@+id/iv_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_back_"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/iv_logo"
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:padding="@dimen/_5sdp"
                                android:scaleType="fitStart"
                                android:src="@drawable/ic_logo"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/welcome"
                            android:visibility="gone"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_big"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:gravity="start"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="@string/introduce_page_two"
                            android:textColor="#a3c9f0"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:gravity="start"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="@string/note_max_file_size"
                            android:textColor="#a3c9f0"
                            android:textSize="@dimen/text_size_extra_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_4sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1.30"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/upload_id_card"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_upload_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".70"
                                android:background="@drawable/btn_sign_up"
                                android:gravity="center"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="@string/upload"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_uploaded_id_file_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:background="@drawable/bt_login_guest"
                            android:drawableStart="@drawable/ic_attach"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/do_you_valid_isurance"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <RadioButton
                                android:checked="true"
                                android:id="@+id/rd_yes"
                                android:layout_width="0dp"
                                android:buttonTint="@color/colorWhite"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorWhite"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_normal"
                                android:layout_weight="1"
                                android:text="@string/yes" />

                            <RadioButton
                                android:id="@+id/rd_no"
                                android:textColor="@color/colorWhite"
                                android:layout_width="0dp"
                                android:textSize="@dimen/text_size_normal"
                                android:buttonTint="@color/colorWhite"
                                android:textAlignment="viewStart"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/no" />

                        </RadioGroup>
                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/lay_insurance_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/insurance_compnay"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_insurance_company"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@color/color_ed_fill"
                                android:gravity="start"
                                android:drawableEnd="@drawable/ic_drop_down"
                                android:padding="@dimen/_8sdp"
                                android:text="@string/select"
                                android:textColor="#fff"
                                android:textSize="@dimen/text_size_normal" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/policy_number"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                            <EditText
                                android:id="@+id/et_policy_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@color/color_ed_fill"
                                android:gravity="start"
                                android:inputType="number"
                                android:maxLength="50"
                                android:padding="@dimen/_8sdp"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_normal" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/membership_id"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                            <EditText
                                android:id="@+id/et_membership_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@color/color_ed_fill"
                                android:gravity="start"
                                android:inputType="number"
                                android:maxLength="50"
                                android:padding="@dimen/_8sdp"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/insurance_expiry_date"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_insurance_expiry_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:drawableEnd="@drawable/ic_calender_date"
                                android:background="@color/color_ed_fill"
                                android:gravity="start"
                                android:padding="@dimen/_8sdp"
                                android:text="@string/select"
                                android:textColor="#fff"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/class_plan"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                            <EditText
                                android:id="@+id/et_class_plan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@color/color_ed_fill"
                                android:gravity="start"
                                android:maxLength="100"
                                android:padding="@dimen/_8sdp"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_normal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_4sdp"
                                android:paddingBottom="@dimen/_4sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_weight="1.30"
                                    android:padding="@dimen/_3sdp"
                                    android:text="@string/attach_insuarnce_card"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/text_size_small" />

                                <TextView
                                    android:id="@+id/tv_upload_insurance_id"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".70"
                                    android:background="@drawable/btn_sign_up"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:text="@string/upload"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/text_size_small" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_uploaded_insurance_file_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@drawable/bt_login_guest"
                                android:drawableStart="@drawable/ic_attach"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:visibility="gone"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/submitter_name"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <EditText
                            android:id="@+id/et_submitter_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:background="@color/color_ed_fill"
                            android:gravity="start"
                            android:inputType="textPersonName"
                            android:maxLength="70"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/relation_to_patiet"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:id="@+id/tv_relation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:background="@color/color_ed_fill"
                            android:gravity="start"
                            android:drawableEnd="@drawable/ic_drop_down"
                            android:padding="@dimen/_8sdp"
                            android:text="@string/select"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_size_normal" />


                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_capt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/login_captch_text"
                    android:textColor="@color/text_blue_color"
                    android:textSize="@dimen/text_size_extra_small"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/capt_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_capt"
                    android:layout_marginEnd="@dimen/_70sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/et_input_captcha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_weight=".35"
                        android:background="@color/colorWhite"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/text_blue_color"
                        android:textSize="@dimen/text_size_normal" />

                    <test.jinesh.captchaimageviewlib.CaptchaImageView
                        android:id="@+id/captcha_image"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight=".35" />

                    <ImageView
                        android:id="@+id/iv_regenerate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight=".20"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_regenerate" />

                </LinearLayout>

                <CheckBox
                    android:gravity="top|start"
                    android:id="@+id/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/capt_lay"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/text_size_normal"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/text_blue_color"
                    android:text="@string/agree_to_policy" />

                <RelativeLayout
                    android:id="@+id/lay_check"
                    android:layout_below="@+id/checkbox"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkbox_concent"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_conesnt"
                        android:layout_toEndOf="@+id/checkbox_concent"
                        android:text="@string/certify_cobtent"
                        android:textColor="@color/text_blue_color"
                        android:textSize="@dimen/text_size_normal"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="bottom"
                        android:drawableEnd="@drawable/ic_launch_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/text_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_check"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/note_signup"
                    android:textColor="@color/text_blue_color"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_note"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lay_btn_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bt_login_guest"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/back"
                            android:textColor="@color/app_blue"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_btn_register"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_sign_up"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register"
                            android:textColor="@color/button_click_text_white_blue"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


</RelativeLayout>
