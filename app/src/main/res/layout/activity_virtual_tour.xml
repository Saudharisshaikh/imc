<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_bg_color"
    android:fitsSystemWindows="true"
    android:focusable="false"
    android:focusableInTouchMode="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud_style_grey_v"
                android:paddingBottom="@dimen/_70sdp">

                <LinearLayout
                    android:id="@+id/lay_mrn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_blue_style_bg_v"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_35sdp">


                    <RelativeLayout
                        android:id="@+id/main_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="center_vertical"
                        android:theme="@style/AppTheme.AppBarOverlay">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_back_" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/virtual_tour"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_big"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/enter_data"
                        android:textColor="#a3c9f0"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/phone_number"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_country_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/color_ed_fill"
                            android:enabled="false"
                            android:gravity="start"
                            android:inputType="number"
                            android:maxLength="50"
                            android:padding="@dimen/_8sdp"
                            android:text="Saudi(+96)"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_normal" />

                        <EditText
                            android:id="@+id/et_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_80sdp"
                            android:background="@color/color_ed_fill"
                            android:gravity="start"
                            android:hint="1234-5670-8909"
                            android:inputType="number"
                            android:maxLength="14"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/grey_color"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/email_address"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_small" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_80sdp"
                        android:background="@color/color_ed_fill"
                        android:gravity="start"
                        android:hint="adam.smith@gmail.com"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/grey_color"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:background="@drawable/btn_sign_up"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_50sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_50sdp"
                android:paddingBottom="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/submit"
                    android:textColor="@color/button_click_text_white_blue"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
