<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_3sdp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/lay_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_product_pic"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/baby_fitaihi" />

            <LinearLayout
                android:id="@+id/lay_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_toStartOf="@+id/iv_product_pic"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/_3sdp"
                    android:text="Lorem Ipsum"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_big" />


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:drawableStart="@drawable/green_dot_bg"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="start"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Delivery expected by Sat, 19 Aug"
                    android:textColor="@color/nav_title_color"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view_"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey_color" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tv_rate_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/rate_review"
                android:textColor="@color/button_click_text_reviews"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>