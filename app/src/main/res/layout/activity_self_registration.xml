<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bg_login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_back_"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_logo"
                    android:visibility="visible" />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/welcome"
                android:textColor="@color/text1"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/introduce"
                android:textColor="@color/grey"
                android:textSize="@dimen/h3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top_h3"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/first_name"
                android:textColor="@color/text1"
                android:textSize="@dimen/h2"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size_h1"
                android:background="@color/color_ed_fill"
                android:fontFamily="@font/open_sans_regular"
                android:inputType="textPersonName"
                android:padding="@dimen/edittext_padding"
                android:textColor="@color/text1"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/h2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top_h3"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/mid_name_father_ar_req"
                android:textColor="@color/text1"
                android:textSize="@dimen/h2"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/mid_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size_h1"
                android:background="@color/color_ed_fill"
                android:fontFamily="@font/open_sans_regular"
                android:inputType="textPersonName"
                android:padding="@dimen/edittext_padding"
                android:textColor="@color/text1"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/h2"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top_h3"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/last_name_family_ar_req"
                android:textColor="@color/text1"
                android:textSize="@dimen/h2"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size_h1"
                android:background="@color/color_ed_fill"
                android:fontFamily="@font/open_sans_regular"
                android:inputType="textPersonName"
                android:padding="@dimen/edittext_padding"
                android:textColor="@color/text1"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/h2"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top_h3"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/enter_phone_number"
                android:textColor="@color/text1"
                android:textSize="@dimen/h2"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/phone_validation_note"
                android:textColor="@color/text1"
                android:textSize="@dimen/h4"
                android:textStyle="bold"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size_h1"
                android:background="@color/color_ed_fill"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="@string/phone_number_code"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/h2"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"

                    />


                <EditText
                    android:id="@+id/phone_numbers"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_size_h1"
                    android:background="@color/color_ed_fill"
                    android:fontFamily="@font/open_sans_regular"
                    android:hint="5XXXXXXXXX"
                    android:padding="@dimen/edittext_padding"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textColor="@color/text1"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/h2"

                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top_h3"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/id_type"
                android:textColor="@color/text1"
                android:textSize="@dimen/h2"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size_h1"
                android:background="@color/color_ed_fill">

                <Spinner
                    android:id="@+id/id_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_size_h1"
                    android:entries="@array/id_type"
                    android:theme="@style/Spinner"
                    app:backgroundTint="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/btn_margin_top_h3"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="@string/id_number"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/id_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_size_h1"
                    android:background="@color/color_ed_fill"
                    android:fontFamily="@font/open_sans_regular"
                    android:inputType="number"
                    android:padding="@dimen/edittext_padding"
                    android:maxLength="10"
                    android:textColor="@color/text1"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/h2"

                    />


            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top_h3"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/id_exp_date"
                android:textColor="@color/text1"
                android:textSize="@dimen/h2"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/id_exp_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size_h1"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="@dimen/drawable_padding"
                android:drawableTint="@color/white"
                android:background="@color/color_ed_fill"
                android:fontFamily="@font/open_sans_regular"
                android:inputType="text"
                android:padding="@dimen/edittext_padding"
                android:text="@string/select"
                android:hint="@string/select"
                android:textColor="@color/text1"
                android:textColorHint="@color/text1"
                android:textSize="@dimen/h2"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top_h3"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/insurance"
                android:textColor="@color/text1"
                android:textSize="@dimen/h2"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size_h1"
                android:background="@color/color_ed_fill">

                <Spinner
                    android:id="@+id/insurance_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_size_h1"
                    android:padding="10dp"
                    android:theme="@style/Spinner"
                    app:backgroundTint="@color/white"

                    />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_margin_top_h3"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/gender_req"
                android:textColor="@color/text1"
                android:textSize="@dimen/h2"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size_h1"
                android:background="@color/color_ed_fill">

                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_size_h1"
                    android:entries="@array/gender"
                    android:theme="@style/Spinner"
                    app:backgroundTint="@color/white"

                    />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/lay_btn_register"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/btn_sign_up"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textColor="@color/button_click_text_white_blue"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>