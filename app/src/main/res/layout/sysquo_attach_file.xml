<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/reveal_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearCameraAttach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ImageButton
                android:id="@+id/imageCameraAttach"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_photo_camera_black_48dp" />

            <TextView
                android:id="@+id/textCameraAttach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/image_text" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearPdfAttach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ImageButton
                android:id="@+id/imagePdfAttach"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/vw_ic_pdf" />

            <TextView
                android:id="@+id/textPdfAttach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/pdf" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearTextAttach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/imageTextAttach"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/sysquo_textfile" />

            <TextView
                android:id="@+id/textTextAttach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/documents_menu" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
