<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_bg_color"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingBottom="@dimen/_15sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:fitsSystemWindows="true"
        android:focusable="false"
        android:focusableInTouchMode="true">


        <RelativeLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg_login"
            android:paddingBottom="@dimen/_20sdp">

            <RelativeLayout
                android:id="@+id/main_toolbar_bottom"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:theme="@style/AppTheme.AppBarOverlay">

                <ImageView
                    android:id="@+id/iv_back_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_back_" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_mrn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_toolbar_bottom"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp">


                <TextView
                    android:id="@+id/toolbar_title_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/add_address"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_big"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/pincode"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:background="@color/color_ed_fill"
                    android:gravity="start"
                    android:maxLength="50"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/house_no_villa_no_building"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_house_no_villa_no_building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:background="@color/color_ed_fill"
                    android:gravity="start"
                    android:maxLength="100"
                    android:maxLines="2"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/road_name_area"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_road_name_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:background="@color/color_ed_fill"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:maxLength="100"
                    android:maxLines="2"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/city"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/color_ed_fill"
                            android:gravity="start"
                            android:maxLength="40"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/state"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small" />

                        <EditText
                            android:id="@+id/et_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/color_ed_fill"
                            android:gravity="start"
                            android:maxLength="50"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/landmark"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:background="@color/color_ed_fill"
                    android:gravity="start"
                    android:maxLength="80"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_normal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/name"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:background="@color/color_ed_fill"
                    android:gravity="start"
                    android:maxLength="80"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_normal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/phone_number_o"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:background="@color/color_ed_fill"
                    android:gravity="start"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/address_type"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_small" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorWhite"
                        android:checked="true"
                        android:text="@string/home_address"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_small" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:buttonTint="@color/colorWhite"
                        android:text="@string/work_address"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_small" />
                </RadioGroup>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lay_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_90sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/btn_sign_up"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_50sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:paddingBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/button_click_text_white_blue"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

