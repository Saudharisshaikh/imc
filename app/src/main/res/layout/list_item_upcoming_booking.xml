<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_income"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/relative_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_your_appointment"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="@string/next_appointment"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_month_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_extra_big"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_month"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_extra_big"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time_am_pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/lay_doc_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.20">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/male_img"
                        android:background="@drawable/white_circle_nin"
                        app:civ_border_color="@color/colorWhite"
                        app:civ_border_width="1dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/iv_profile"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_doctor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_clinic_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_extra_small" />

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:padding="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:id="@+id/tv_consultation"
                android:drawableStart="@drawable/ic_launch"
                android:text="@string/goto_consult"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/button_click_text_white_blue"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_gravity="end"
                android:gravity="center_vertical|end"
                android:id="@+id/tv_view_assessment"
                android:drawableEnd="@drawable/ic_arrow_next_w"
                android:text="@string/view_assessment"
                android:textAlignment="textEnd"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="0dp"
                android:padding="@dimen/_3sdp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/button_click_text_white_blue"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/lay_btn_manage_appointment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight=".85"
                    android:background="@drawable/btn_sign_up"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reschedule"
                        android:textColor="@color/button_click_text_white_blue"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/lay_btn_cancel_appoint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight=".85"
                    android:background="@drawable/bt_home_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay_btn_checkin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_weight="1.70"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_btn_checkin"
                        android:background="@drawable/bt_home_white"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:drawableStart="@drawable/ic_selected_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_8sdp"
                        android:text="@string/check_in"
                        android:textColor="@color/button_click_text_white_blue"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
                <ImageView
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:id="@+id/iv_print"
                    android:src="@drawable/ic_print"
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/button_click_text_white_blue"
                    android:textSize="@dimen/text_size_small"
                    android:layout_height="match_parent"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>

