<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_bg_color"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:clickable="true"
        android:focusable="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_210sdp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/little_flower" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/fading_bh"
                android:fadingEdge="horizontal"
                android:padding="@dimen/_8sdp"
                android:text="Talah"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/white_circle"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_close_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_card"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:padding="@dimen/_3sdp"
                android:text="@string/open_time"
                android:textColor="@color/text_blue_color"
                android:textSize="@dimen/text_size_extra_big"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_other_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:text="Saturday-Thursday: 10 AM - 10 PM"
                android:textColor="@color/grey_dark_color"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_friday_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:visibility="gone"
                android:text="Friday: 4 PM - 10 PM"
                android:textColor="@color/grey_dark_color"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:text="@string/employee"
                android:textColor="@color/text_blue_color"
                android:textSize="@dimen/text_size_extra_big"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_employees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:text="Bashir - Ayman - Noha"
                android:textColor="@color/grey_dark_color"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:text="Contact"
                android:visibility="gone"
                android:textColor="@color/grey_dark_color"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />



        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
